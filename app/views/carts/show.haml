%main.container.general-main-wrap
  %h1.general-title-margin
    = I18n.t('cart.title_cart')
  .visible-xs
    = simple_form_for cart_path, method: :patch do |f|
      - @items.each do |book, quantity|
        = render partial: 'carts/partials/cart_item_xs', locals: {f: f, book: book, quantity: quantity}
  .hidden-xs
    %table.table.table-hover
      %tr.no-hover
        %th.col-pic.pl-0
          %span.in-grey-600
            =t('cart.product')
        %th.col-title
        %th.col-price
          %span.in-grey-600
            = t('cart.price')
        %th.col-quantity
          %span.in-grey-600
            = t('cart.quantity')
        %th.col-total
          %span.in-grey-600
            = t('cart.subtotal')
        %th.col-close
      = simple_form_for cart_path, method: :patch do |f|
        - @items.each do |book, quantity|
          = render partial: 'carts/partials/cart_item', locals: {f: f, book: book, quantity: quantity}
  .general-order-wrap
    .row
      = simple_form_for(@coupon, as: :'discount', url: coupons_path, validate: true, method: :patch) do |f|
        = render partial: 'carts/partials/coupon', locals: { f: f }
      .col-sm-8
        = render partial: 'carts/partials/summary'
        = link_to t('cart.checkout'), checkout_step_path, class: 'btn btn-default mb-20'
